<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>add a new movie</h1>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie %>
          <%= f.input :comment %>
         <input type="submit" name="commit" value="create bookmark" class="btn btn-success" data-disable-with="create bookmark">
        <% end %>
        <%= link_to "my lists", lists_path, class:"btn btn-danger mt-1" %>
      </div>
    </div>
  </div>
</div>
